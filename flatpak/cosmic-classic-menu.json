{
  "id": "com.championpeak87.cosmic-classic-menu",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "24.08",
  "base": "com.system76.Cosmic.BaseApp",
  "base-version": "stable",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
  "command": "cosmic-classic-menu",
  "finish-args": [
    "--share=network",
    "--filesystem=xdg-config/cosmic:rw",
    "--talk-name=com.system76.CosmicSettingsDaemon",
    "--system-talk-name=org.freedesktop.Accounts",
    "--socket=wayland",
    "--device=dri",
    "--talk-name=org.freedesktop.portal.Desktop",
    "--talk-name=org.freedesktop.portal.Location",
    "--env=XDG_DATA_DIRS=$XDG_DATA_DIRS:/run/host/usr/share"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin",
    "env": {
      "CARGO_HOME": "/run/build/cosmic-classic-menu/cargo"
    }
  },
  "modules": [
    {
      "name": "cosmic-classic-menu",
      "buildsystem": "simple",
      "build-commands": [
        "just build-release --verbose",
        "just prefix=/app install"
      ],
      "sources": [
        {
          "type": "dir",
          "path": ".."
        },
        "./cargo-sources.json"
      ]
    }
  ]
}
